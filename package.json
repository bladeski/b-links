    "test": "jest"
  },
  "browserslist": "since 2015",
  "devDependencies": {
    "@parcel/transformer-pug": "2.7.0",
    "@parcel/transformer-sass": "2.7.0",
    "@types/dompurify": "^2.3.4",
    "@types/jest": "^29.1.2",
    "@types/marked": "^4.0.7",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "parcel": "^2.7.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "dompurify": "^2.4.0",
    "marked": "^4.1.1"
  }
