{
  "name": "blinks",
  "version": "2.7.1",
  "description": "A curated list of useful links.",
  "author": "Jonathan Blades",
  "license": "MIT",
  "source": "src/pages/index.html",
  "targets": {
    "default": {
      "source": [
        "src/pages/index.html",
        "src/pages/robots.txt"
      ],
      "distDir": "dist"
    }
  },
  "type": "module",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:dist-serve": "rimraf dist-serve",
    "clean:dist-serve-management": "rimraf dist-serve-management",
    "start": "npm run clean:dist-serve && parcel serve --dist-dir dist-serve --no-cache --open",
    "start:management": "npm run clean:dist-serve-management && parcel serve src/pages/management.pug src/pages/robots.txt --dist-dir dist-serve-management --port 1235 --open",
    "start:api": "ts-node-esm src/api/api.ts",
    "start:all": "concurrently \"yarn start\" \"yarn start:api\" \"yarn start:management\" --restart-tries 3",
    "build": "npm run clean:dist && ts-node-esm src/api/build.ts && parcel build --no-source-maps --public-url /b-links --no-cache",
    "test": "jest"
  },
  "browserslist": "since 2015",
  "devDependencies": {
    "@parcel/packager-raw-url": "2.8.3",
    "@parcel/transformer-pug": "2.8.3",
    "@parcel/transformer-sass": "2.8.3",
    "@parcel/transformer-webmanifest": "2.8.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.1.2",
    "@types/marked": "^4.0.7",
    "@types/pug": "^2.0.6",
    "concurrently": "^8.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "isomorphic-dompurify": "^1.3.0",
    "jest": "^29.1.2",
    "jest-environment-jsdom": "^29.1.2",
    "jest-mock-fetch": "^2.0.5",
    "parcel": "^2.7.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "util": "^0.12.5"
  },
  "dependencies": {
    "marked": "^4.1.1"
  }
}
