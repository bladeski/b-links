extends ../templates/layout.pug
include ../templates/mixins.pug

block content
  - var pageName = 'blog'

  article
    hgroup
      h1 Blog
      span.subhead A collection of my thoughts...
    +latestPosts(posts)
    section 
      h2 All Posts
      each post in posts
        - var date = new Date(post.createdAt)
        article.blog-post 
          hgroup 
            h3
              a.blog-post-title(href='/src/pages/post/' + date.getFullYear() + '/' + post.name + '.html') #{post.title}
              span.subhead First posted #{date.toDateString()}
          p.blog-post-description #{post.description}