mixin navbar(currentPage)
  nav
    div.nav-container
      ul
        li(class={selected: currentPage === 'home'})
          a.title.nav-item(href="/src/pages/index.html" aria-label="b-links home.") b-links
        li(class={ selected: currentPage === 'blog'})
          a.nav-item(href="/src/pages/blog.html" aria-label="My blog.") blog
        li(class={ selected: currentPage === 'links'})
          a.nav-item(href="/src/pages/links.html" aria-label="Useful links.") links
        li(class={ selected: currentPage === 'about'})
          a.nav-item(href="/src/pages/about.pug" aria-label="About b-links.") about
      if process.env.NODE_ENV === 'development'
        details(open=currentPage.includes('management'))
          summary.nav-item management
          ul
            li(class={selected: currentPage === 'blog management'})
              a.nav-item(href="/src/pages/blog-management.pug" aria-label="Blog Management.") blog
            li(class={ selected: currentPage === 'link management'})
              a.nav-item(href="/src/pages/link-management.pug" aria-label="Link Management.") links
      details
        summary.nav-item settings
        form#Preferences
          label Use Dyslexic Styles
            input(name="showDyslexicStyles" aria-label="Use dyslexic styles" type="checkbox")
          label Load Web Fonts
            input(name="loadCustomFonts" aria-label="Load web fonts" type="checkbox")
          span.theme-picker
            | Theme:
            div
              label No Preference
                input(name="currentTheme" value="-" aria-label="Use browser theme for dark/light mode selection." type="radio")
              label Light
                input(name="currentTheme" value="light-mode" aria-label="Enable light mode" type="radio")
              label Dark
                input(name="currentTheme" value="dark-mode" aria-label="Enable dark mode" type="radio")
            label Colour 
              input(name="themeColour" aria-label="Change theme colour hue" type="range" min="0" max="360" value="314")