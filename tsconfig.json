{
  "compilerOptions": {
    "strict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "module": "ES2022",
    "sourceMap": true,
    "outDir": "./dist/",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}